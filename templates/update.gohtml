<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Book</title>
     <link rel="stylesheet" href="../assets/stylesheets/update.css" type="text/css">
</head>
<body>

<h1>Update A Book</h1>
<form method="post" action="/books/update/process?id={{.Id}}">
    <input type="text" name="title" placeholder="title" required value="{{.Title}}">
    <input type="text" name="author" placeholder="author" required value="{{.Author}}">
    <input type="text" name="price" placeholder="price" required value="{{.Price}}">
    <input type="submit">
</form>

</body>
</html>